  font-weight: 700;
  color: {{colorScheme.primary}};
  margin-bottom: 0.25rem;
}

.hero--with-background .trust-indicator__number {
  color: white;
}

.trust-indicator__text {
  font-size: 0.9rem;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.hero--with-background .trust-indicator__text {
  color: rgba(255, 255, 255, 0.8);
}

.hero__image {
  position: relative;
  text-align: center;
}

.hero__image-element {
  max-width: 100%;
