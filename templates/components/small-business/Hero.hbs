  }

  .hero__text {
    text-align: left;
  }

  .hero__actions {
    justify-content: flex-start;
  }

  .hero__trust-indicators {
    justify-content: flex-start;
  }

  .hero__title {
    font-size: 3rem;
  }

  .hero__subtitle {
    font-size: 1.375rem;
    margin-left: 0;
    margin-right: 0;
  }

  .hero__description {
    margin-left: 0;
    margin-right: 0;
  }
}

@media (min-width: 1024px) {
  .hero__title {
    font-size: 3.5rem;
  }

  .hero__trust-indicators {
    gap: 3rem;
  }

  .trust-indicator {
    min-width: 140px;
  }
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
  .hero__image-element,
  .btn,
  .hero__cta {
    transition: none;
  }

  .hero__image-element:hover,
  .btn:hover,
  .hero__cta:hover {
    transform: none;
  }
}

/* High contrast mode */
@media (prefers-contrast: high) {
  .hero {
    border: 1px solid;
  }

  .btn--primary,
  .btn--secondary {
    border: 2px solid;
  }
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
  .hero:not(.hero--with-background) {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  }

  .hero__title {
    color: #ffffff;
  }

  .hero__subtitle {
    color: #cccccc;
  }

  .hero__description {
    color: #aaaaaa;
  }

  .trust-indicator__text {
    color: #aaaaaa;
  }
}
</style>
